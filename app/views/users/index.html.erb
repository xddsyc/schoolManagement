<div class="users-index">
	<h1>用户管理</h1>
	<p>
		<%= link_to '新增用户', new_user_path, class: "btn btn-success" %>
	</p>
	<div class="grid-view">
		<table class="table table-striped table-bordered">
			<tr>
				<th>ID</th>
				<th>用户名</th>
				<th>最后编辑时间</th>
				<th>操作</th>
			</tr>

			<% @users.each do |user| %>
				<tr>
					<td><%= user.id %></td>
					<td><%= user.name %></td>
					<td><%= user.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
					<td>
						<%= link_to '查看', user_path(user) %>
						<%= link_to '编辑', edit_user_path(user) %>
						<%= link_to '删除', user_path(user), method: :delete, data: { confirm: '你确定要删除此记录吗？' } %>
					</td>
				</tr>
			<% end %>
		</table>
		<%= paginate @users %>
	</div>
</div>