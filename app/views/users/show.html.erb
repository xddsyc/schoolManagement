<div class="user-view">
	<h1><%= @user.name %></h1>
	<p>
		<%= link_to '编辑', edit_user_path(@user), class: 'btn btn-primary' %>
		<%= link_to '删除', user_path(@user), method: :delete, data: { confirm: '你确定要删除此记录吗？' }, class: 'btn btn-danger' %>
	</p>
	<table class="table table-striped table-bordered detail-view">
		<tr>
			<th>ID:</th>
			<td><%= @user.id %></td>
		</tr>
		<tr>
			<th>用户名:</th>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<th>创建时间:</th>
			<td><%= @user.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
		</tr>
		<tr>
			<th>最后编辑时间:</th>
			<td><%= @user.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
		</tr>
	</table>
</div>