<div class="sclasses-index">
	<h1>学生管理</h1>
	<p>
		<%= link_to '新增学生', new_student_path, class: "btn btn-success" %>
	</p>
	<div class="grid-view">
		<table class="table table-striped table-bordered">
			<tr>
				<th>ID</th>
				<th>学号</th>
				<th>姓名</th>
				<th>班级</th>
				<th>最后编辑时间</th>
				<th>操作</th>
			</tr>

			<% @students.each do |student| %>
				<tr>
					<td><%= student.id %></td>
					<td><%= student.no %></td>
					<td><%= student.name %></td>
					<td><%= student.sclass.grade_name + student.sclass.class_name %></td>
					<td><%= student.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
					<td>
						<%= link_to '查看', student_path(student) %>
						<%= link_to '编辑', edit_student_path(student) %>
						<%= link_to '删除', student_path(student), method: :delete, data: { confirm: '你确定要删除此记录吗？' } %>
					</td>
				</tr>
			<% end %>
		</table>
		<%= paginate @students %>
	</div>
</div>