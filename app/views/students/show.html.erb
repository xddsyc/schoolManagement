<div class="student-view">
	<h1><%= @student.name %></h1>
	<p>
		<%= link_to '编辑', edit_student_path(@student), class: 'btn btn-primary' %>
		<%= link_to '删除', student_path(@student), method: :delete, data: { confirm: '你确定要删除此记录吗？' }, class: 'btn btn-danger' %>
	</p>
	<table class="table table-striped table-bordered detail-view">
		<tr>
			<th>ID:</th>
			<td><%= @student.id %></td>
		</tr>
		<tr>
			<th>学号:</th>
			<td><%= @student.no %></td>
		</tr>
		<tr>
			<th>姓名:</th>
			<td><%= @student.name %></td>
		</tr>
		<tr>
			<th>年级:</th>
			<td><%= @student.sclass.grade_name %></td>
		</tr>
		<tr>
			<th>班级:</th>
			<td><%= @student.sclass.class_name %></td>
		</tr>
	</table>
</div>